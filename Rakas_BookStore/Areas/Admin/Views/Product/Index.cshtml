@model List<Product>

<!DOCTYPE html>
<html lang="en">
<head>

</head>

<body>
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Product List</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4 text-info">
            <div class="row pb-2">
                <div class="col-6"></div>
                <div class="col-6 text-end">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"> Create New Product</i>
                    </a>
                </div>
            </div>

            <table id="prodTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>Price</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <script src="~/js/Product.js"></script>
}