@model Category

<!DOCTYPE html>
<html lang="en">
<head>

</head>

<body>
    <form method="post">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-0 mb-0">
                <h2 class="text-primary">Delete Category</h2>
                <hr class="mb-1 pb-0" />
            </div>
            <div class="mb-2 row p-1">
                <label asp-for="Name" class="p-0 fw-bold"></label>
                <input asp-for="Name" type=" text" class="form-control" disabled />
            </div>
            <div class="mb-2 row p-1">
                <label asp-for="Description" class="p-0 fw-bold"></label>
                <input asp-for="Description" type="text" class="form-control" disabled />
            </div>
            <div class="mb-2 row p-1">
                <label asp-for="DisplayOrder" class="p-0 fw-bold"></label>
                <input asp-for="DisplayOrder" type="number" class="form-control" disabled />
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back</a>
                </div>
            </div>
        </div>
    </form>
</body>
</html>