@model List<Category>

<!DOCTYPE html>
<html lang="en">
<head>

</head>

<body>
    <div class="container">
        <div class="row pt-2 pb-2">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="" asp-action="" class="btn btn-primary">
                    <i class="bi bi-plus-circle"> Create New Category</i>
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th> Category Name</th>
                    <th>Description</th>
                    <th>Display Order</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var cat in Model.OrderBy(x => x.DisplayOrder))
                    {
                        <tr>
                            <td>@cat.Name</td>
                            <td>@cat.Description</td>
                            <td>@cat.DisplayOrder</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>    
</body>
</html>